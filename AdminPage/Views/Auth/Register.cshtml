@model RegisterModel
@{
	ViewData["Title"] = "Register";
    Layout = "_FormLayout";
}
<h2>Registration</h2>
 
<form asp-action="Register" asp-controller="auth" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div>
            <label asp-for="Email">Enter an Email</label><br />
            <input type="text" asp-for="Email" />
            <span asp-validation-for="Email" />
        </div>
        <div>
            <label asp-for="Name">Enter your name</label><br />
            <input asp-for="Name" />
            <span asp-validation-for="Name" />
        </div>
        <div>
            <label asp-for="Password">Enter a password</label><br />
            <input asp-for="Password" />
            <span asp-validation-for="Password" />
        </div>
        <div>
            <label asp-for="ConfirmPassword">Repeat the password</label><br />
            <input asp-for="ConfirmPassword" />
            <span asp-validation-for="ConfirmPassword" />
            <p>Already have account? <a href="login">Log in</a></p>
        </div>
        <div>
            <input type="submit" class="btn btn-primary btn-block" value="Регистрация" />
        </div>
        
    </div>
</form>
