@model LoginModel
@{
	ViewData["Title"] = "Login";
	Layout = "_FormLayout";
}
<form asp-action="login" asp-controller="Auth">
	<div class="form-group">
		<label id="inputEmail" class="sr-only" asp-for="Email"></label>
		<input class="form-control" asp-for="Email" />
		<span asp-validation-for="Email" />
	</div>
	<div class="form-group">
		<label id="inputEmail" class="sr-only" asp-for="Password"></label>
		<input class="form-control" asp-for="Password" />
		<span asp-validation-for="Password"></span>
	</div>
	<div class="container mt-3">
		<a class="btn btn-success btn-block" href="register">Sign up</a>
		<button type="submit" class="btn btn-primary btn-block">Log In</button>
	</div>

</form>


